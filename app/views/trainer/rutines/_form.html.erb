<%= form_with(model: [:trainer, rutine]) do |form| %>
  <%= form.hidden_field :user_id %>

  <% if rutine.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(rutine.errors.count, "error") %> prohibited this rutine from being saved:</h2>

      <ul>
        <% rutine.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

 <div class="mt-4">
    <%= form.label :name, "Nombre Rutina", class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="mt-2">
    <%= form.label :day, "Día", class: "form-label" %>
    <%= form.number_field :day, class: "form-control", required: true %>
  </div>

  <div class="mt-2">
    <%= form.label :week, "Semana", class: "form-label" %>
    <%= form.number_field :week, class: "form-control", required: true %>
  </div>

  <div class="mt-2">
    <%= form.label :nutrition, class: "form-label" %>
    <%= form.select :nutrition, Rutine::NUTRITION, {}, class: "form-control" %>
  </div>


  <%# <%= link_to "Añadir Serie", trainer_user_path(user), class: "btn btn-primary" %> 

  <div class="mt-3">
    <%= form.submit "Guardar", class: "btn btn-primary" %>
  </div>
<% end %>
