<main class="mb-5 mt-5 container">
  <%= content_tag :h1, "Hola #{current_user.name}, estás en el Área de trabajo para entrenadores", class: "mb-5" %>
  <%# <h2 class="mb-3">Área de trabajo para entrenadores</h2> %>

  <div id="users">
    <h2 class="text-center mb-3 mt-3">Mis Usuarios</h2>
    <%= render partial: "search" %>

    <div class="table-responsive">
    <table class="table table-hover">
      <thead>
        <tr>
          <%= content_tag :th, sort_link(@q, :name, "Nombre", default_order: :desc) %>
          <%= content_tag :th, sort_link(@q, :email, "Email", default_order: :desc) %>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <%= content_tag :td, user.name %>
            <%= content_tag :td, user.email %>
            <td>
              <%= link_to "Ver usuario", trainer_user_path(user), class: "btn btn-primary" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
</main>
