<%= form_with(model: [:admin, user]) do |form| %>
  <% if user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mt-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="mt-3">
    <%= form.label :email, class: "form-label" %>
    <%= form.text_field :email, class: "form-control" %>
  </div>

  <div class="form-check mt-3">
    <%= form.check_box :is_admin, class: "form-check-input" %>
    <%= form.label :is_admin, "Es Admin", class: "form-check-label" %>
  </div>

  <div class="form-check mt-3">
    <%= form.check_box :is_trainer, class: "form-check-input" %>
    <%= form.label :is_trainer, "Es Entrenador", class: "form-check-label" %>
  </div>

  <div class="mt-4">
    <%= form.label :trainer_id, "Asignar Entrenador", class: "form-label" %>    
    <%= form.collection_select(:trainer_id, User.where(is_trainer: true), :id, :name, {include_blank: true}, class: "form-control") %>
  </div>

  <div class="mt-3">
    <%= form.submit "Guardar", class: "btn btn-primary" %>
  </div>
<% end %>
