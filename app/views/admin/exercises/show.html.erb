<p style="color: green"><%= notice %></p>

<div id="<%= dom_id @exercise %>">
  <p>
    <%= image_tag("#{@exercise.name.parameterize}.png", width: "500px") %>
  </p>
  <p>
    <strong>Name:</strong>
    <%= @exercise.name %>
  </p>

  <p>
    <strong>Muscle group:</strong>
    <%= @exercise.muscle_group %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @exercise.description.html_safe %>
  </p>

</div>

<div>
  <%= link_to "Editar ejercicio", edit_admin_exercise_path(@exercise) %> |
  <%= link_to "Volver a ejercicios", admin_exercises_path %>

  <%= button_to "Borrar ejercicio", admin_exercise_path(@exercise), method: :delete %>
</div>
