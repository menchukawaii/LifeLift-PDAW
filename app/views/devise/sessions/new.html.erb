<div class="login">
  <div class="login-form">
    <h2 class="mb-3">Acceder a tu cuenta</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, "Email", class: "form-label" %><br>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :password, "Contraseña", class: "form-label" %><br>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <%# <% if devise_mapping.rememberable? %>
        <%# <div class="field"> %>
          <%# <%= f.check_box :remember_me, class: "form-check-label" %>
          <%# <%= f.label :remember_me, "Recuerdame", class: "form-label" %>
        <%# </div> %>
      <%# <% end %>

      <div class="actions">
        <%= f.submit "Iniciar sesión", class: "btn btn-primary" %>
      </div>
    <% end %>

    <div class="login-links">
      <span>Ya tienes una cuenta?</span>
      <%= render "devise/shared/links" %>
    </div>
  </div>

  <div class="login-img">
  </div>

</div>
